<div class="container-fluid ">
    <div>
      <div class="row col-xs-8">
        <div id= "links" class="actions">
          <%= button_to('New Activity', new_activity_path, :class => 'btn  btn-primary pull-right btn-padded')  %>
        </div>
      </div>
    </div>
   <div class="row col-xs-12 col-md-8 ">
      <div class="col-xs-6 previous">
         <h4>Recent Activities</h4>
      </div>
   </div>
   <div class="row col-xs-12 col-md-8 ">
      <table id="student-table" class="table table-condensed">
         <thead>
            <tr>
               <th>Client Name</th>
               <th>Case Manager Name</th>
               <th>Service Provider</th>
               <th>Start_Date</th>
               <th>Activity</th>
               <th>Duration</th>
               <th>Edit</th>
               <th>Delete2</th>
            </tr>
         </thead>
         <% @activities.each do |activity| %>
          <tr>
            <td id="name">
              <%=Client.find(activity.client_id).first_name%>
            </td>
            <td id="name">
              <%=Manager.find(activity.manager_id).first_name%>
            </td>
            <td id="name">
              <h1> test</h1>
            </td>
            <td id="name">
              <%=activity.start_date.strftime("%A, %B %-d, %Y")%>
            </td>
            <td>
              <%=ActivityType.find(activity.activity_type_id).name%>
            </td>
            <td>
              <%=activity.duration%>
            </td>
            <td><%= button_to('Edit', edit_activity_path(activity), :class => 'btn btn-secondary btn-sm')%>
            </td>
            <td><%= button_to 'Delete', activity_path(activity), :class => 'btn btn-secondary btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
            </td>
          </tr>
        <%end%>
      </table>
   </div>
</div>
