<div class="container-fluid ">
  <div class="row col-xs-12">
    <div id= "links" class="actions">
      <%= button_to('New Client', new_client_path, method: :get, :class => 'btn  btn-primary pull-right btn-padded')  %>
    </div>
  </div>
  <div class="row col-xs-12 col-md-8 ">
    <div class="pull-left">
      <%=image_tag("women.png", height: '100', width: '100', :class => "rounded")%>
    </div>
    <div>
       <h4>Clients</h4>
    </div>
  </div>
  <div class="row col-xs-12 col-md-8">
      <table id="student-table" class="table table-condensed">
         <thead>
            <tr>
               <th>Client Name</th>
               <th>Edit</th>
               <th>Delete</th>
            </tr>
         </thead>
         <% @clients.each do |client| %>
          <tr>
            <td id="name">
              <%=client.first_name%>
           </td>
           <td><%= button_to('Edit', edit_client_path(client), method: :get, :class => 'btn btn-secondary btn-sm')%>
           </td>
           <td><%= button_to 'Delete', client_path(client), method: :get, :class => 'btn btn-secondary btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this client?' } %>
            </td>
           <%end%>
         </tr>
      </table>
   </div>
</div>
