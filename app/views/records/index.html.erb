<div class="container-fluid ">
  <div>
    <div class="row col-xs-12">
      <div id= "links" class="actions">
        <%= button_to 'New Record', new_record_path, method: :get, :class => 'btn  btn-primary pull-right btn-padded'  %>
      </div>
    </div>
  </div>
   <div class="row col-xs-12 col-md-8 ">
      <div class="col-xs-3 previous">
         <%=image_tag("case_notes2.jpg", :class => "img-rounded img-responsive")%>
      </div>
   </div>
   <div class="row col-xs-12 col-md-8 ">
      <table class="table table-condensed">
         <thead>
            <tr>
               <th>Client Name</th>
               <th>Start Date</th>
               <th>Quick View</th>
               <th>Edit</th>
               <th>Delete</th>
            </tr>
         </thead>
         <% @records.each do |record| %>
          <tr>
            <td id="name">
              <%=Client.find(record.client_id).first_name%>
           </td>
           <td id="name">
              <%=record.start_date%>
           </td>
           <td><%= button_to('Quick View', record_path(record), method: :get, :class => 'btn btn-secondary btn-sm')%>
           </td>
           <td><%= button_to('Edit', edit_record_path(record), method: :get, :class => 'btn btn-secondary btn-sm')%>
           </td>
           <td><%= button_to 'Delete', record_path(record), :class => 'btn btn-secondary btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
               </td>
           <%end%>
      </table>
   </div>
</div>

