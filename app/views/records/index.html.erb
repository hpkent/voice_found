<div class="container-fluid ">
    <div>
      <div class="row col-xs-8">
        <div id= "links" class="actions">
          <%= button_to 'New Record', new_record_path, method: :get, :class => 'btn  btn-primary pull-right btn-padded'  %>
        </div>
      </div>
    </div>
   <div class="row col-xs-12 col-md-8 ">
      <div class="col-xs-6 previous">
         <h4>Active Cases</h4>
      </div>
   </div>
   <div class="row col-xs-12 col-md-8 ">
      <table id="student-table" class="table table-condensed">
         <thead>
            <tr>
               <th>Client Name</th>
               <th>Start Date</th>
               <th>Record</th>
               <th>Edit</th>
               <th>Delete</th>
            </tr>
         </thead>
         <% @records.each do |record| %>
          <tr>
            <td id="name">
              <%=Client.find(record.client_id).first_name%>
           </td>
           <td id="name">
              <%=Manager.find(record.manager_id).first_name%>
           </td>
           <td id="name">
              <%=record.start_date%>
           </td>
           <td><%= button_to('Edit', edit_record_path(record), method: :get, :class => 'btn btn-secondary btn-sm')%>
           </td>
           <td><%= button_to 'Delete', record_path(record), method: :get, :class => 'btn btn-secondary btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
               </td>
           <%end%>
      </table>
   </div>
</div>

