<div class="container-fluid ">
    <div>
      <div class="row col-xs-8">
        <div id= "links" class="actions">
          <%= button_to('New Client', new_client_path, :class => 'btn  btn-primary pull-right btn-padded')  %>
        </div>
      </div>
    </div>
   <div class="row col-xs-12 col-md-8 ">
      <div class="col-xs-6 previous">
         <h4>Clients</h4>
      </div>
   </div>
   <div class="row col-xs-12 col-md-8 ">
      <table id="student-table" class="table table-condensed">
         <thead>
            <tr>
               <th>Client Name</th>
               <th>Edit</th>
               <th>Delete</th>
            </tr>
         </thead>
         <% @clients.each do |client| %>
          <tr>
            <td id="name">
              <%=Client.find(client.client_id).first_name%>
           </td>
           <td><%= button_to('Edit', edit_client_path(client), :class => 'btn btn-default btn-sm')%>
           </td>
           <td><%= button_to 'Delete', client_path(client), :class => 'btn btn-default btn-sm',
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
               </td>
           <%end%>
      </table>
   </div>
</div>

